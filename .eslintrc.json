{
  "extends": ["next", "next/core-web-vitals"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "overrides": [
    {
      "files": [
        "*.js",
        "*.cjs",
        "*.mjs",
        "next.config.js",
        "postcss.config.js",
        "tailwind.config.js",
        "app/api/**/*.js"
      ],
      "parser": "espree",
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      }
    }
  ]
}
